# Fintr Microservices - Production Environment Configuration
# Copy this file to .env and fill in your actual values

# ===== DATABASE (AWS RDS PostgreSQL) =====
DATABASE_URL=postgresql://username:password@your-rds-endpoint.region.rds.amazonaws.com:5432/fintr

# ===== CLERK AUTHENTICATION =====
# Get these from https://dashboard.clerk.com/
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_your_publishable_key_here
CLERK_SECRET_KEY=sk_live_your_secret_key_here

# Clerk URLs (adjust if using custom domain)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# ===== API CONFIGURATION =====
# For production, this would be your domain
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_API_GATEWAY_URL=https://api.your-domain.com

# ===== PLAID INTEGRATION =====
# Get these from https://dashboard.plaid.com/
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret_key
PLAID_ENV=sandbox  # Change to 'production' for live

# ===== LEMONSQUEEZY (PAYMENTS) =====
# Get these from https://app.lemonsqueezy.com/
LEMONSQUEEZY_API_KEY=your_lemonsqueezy_api_key
LEMONSQUEEZY_STORE_ID=your_store_id
LEMONSQUEEZY_WEBHOOK_SECRET=your_webhook_secret

# ===== AWS CONFIGURATION (for EKS deployment) =====
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# ===== SECURITY =====
NEXTAUTH_SECRET=your_nextauth_secret_here
ENCRYPTION_KEY=your_32_character_encryption_key

# ===== MICROSERVICES INTERNAL URLs (for Docker/K8s) =====
ACCOUNT_SERVICE_URL=http://account-service:4002
TRANSACTION_SERVICE_URL=http://transaction-service:4003
CATEGORY_SERVICE_URL=http://category-service:4004
ANALYTICS_SERVICE_URL=http://analytics-service:4005
PLAID_SERVICE_URL=http://plaid-service:4006
SUBSCRIPTION_SERVICE_URL=http://subscription-service:4007
